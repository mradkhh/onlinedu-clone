{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitzAny": false,
        "target": "es6",
        "path": {
            "Components/*": ["Components/*"],
            "I18n/*": ["I18n/*"],
            "Images/*": ["Images/*"],
            "Layout/*": ["Layout/*"],
            "Pages/*": ["Pages/*"],
            "Services/*": ["Services/*"],
            "Constants/*": ["Constants/*"],
            "Redux/*": ["Redux/*"],
            "Clients/*": ["Constants/*"],
            "Assets/*": ["Assets/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", ".vscode"]
}